# EditorConfig for NvChad Neovim

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 79

[*.c]
indent_style = space
indent_size = 4
max_line_length = 79
insert_final_newline = true

# Function-specific settings
[*.h]
indent_style = space
indent_size = 4
max_line_length = 79

# Makefile
[Makefile]
indent_style = tab
tab_width = 4

# Header files protection
[*.h]
insert_final_newline = true


